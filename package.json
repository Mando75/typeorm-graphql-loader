{
  "name": "@mando75/typeorm-graphql-loader",
  "version": "1.3.0",
  "description": "A dataloader which intelligently selects/joins the fields/relations from your TypeORM entities needed to resolve a GraphQL query",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "yarn build",
    "build": "tsc --declaration",
    "publish:docs": "typedoc --options typedoc.json",
    "lint": "eslint 'src/**/*.ts'",
    "test": "yarn build && nyc mocha -r ts-node/register -r tslib -r source-map-support/register --full-trace src/__tests__/**/*.test.ts --timeout 5000"
  },
  "files": [
    "dist/",
    "yarn.lock",
    ".gitignore",
    "!/dist/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/Mando75/typeorm-graphql-loader"
  },
  "keywords": [
    "typeorm",
    "database",
    "graphql",
    "data",
    "apollo",
    "loader",
    "batching",
    "caching",
    "resolvers",
    "dataloader"
  ],
  "author": "Bryan Muller",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/Mando75/typeorm-graphql-loader/issues"
  },
  "homepage": "https://gitlab.com/Mando75/typeorm-graphql-loader",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/chai-spies": "^1.0.2",
    "@types/chance": "^1.0.7",
    "@types/deep-equal": "^1.0.1",
    "@types/faker": "^5.1.0",
    "@types/graphql": "^14.5.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.0.13",
    "@types/object-path": "^0.11.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "chai-things": "^0.2.0",
    "chance": "^1.1.3",
    "class-validator": "^0.12.2",
    "deep-equal-in-any-order": "^1.0.21",
    "eslint": "^7.3.0",
    "faker": "^5.1.0",
    "graphql": "^15.3.0",
    "metanoia": "^1.0.1",
    "mocha": "^8.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "15.1.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "sqlite3": "^4.1.0",
    "ts-node": "^8.9.0",
    "tslib": "^2.0.0",
    "type-graphql": "^1.0.0",
    "typedoc": "^0.17.3",
    "typeorm": "^0.2.19",
    "typescript": "^3.6.4"
  },
  "peerDependencies": {
    "graphql": "^15.3.0",
    "typeorm": ">=0.2.8"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "tslib"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
